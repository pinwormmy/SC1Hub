<mapper namespace="com.example.mapper.ViewCountMapper">
    <select id="findByDate" resultType="com.example.model.ViewCount">
        SELECT * FROM view_count WHERE date = #{date}
    </select>

    <update id="incrementCount">
        UPDATE view_count SET count = count + 1 WHERE date = #{date}
    </update>

    <update id="incrementTotalCount">
        UPDATE view_count SET total_count = total_count + 1
    </update>

    <insert id="insertNewRecord">
        INSERT INTO view_count (date, count, total_count) VALUES (#{date}, 1, #{totalCount})
    </insert>

    <select id="getTotalCount" resultType="int">
        SELECT SUM(total_count) FROM view_count
    </select>

    <select id="getTodayCount" resultType="int">
        SELECT count FROM view_count WHERE date = #{date}
    </select>
</mapper>
