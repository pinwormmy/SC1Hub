<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.column.mapper.VisitorCountMapper">

    <select id="findByDate" resultType="com.study.column.visitorCount.VisitorCountDTO">
        SELECT * FROM visitor_count WHERE date = #{date}
    </select>

    <update id="incrementDailyCount">
        UPDATE visitor_count SET count = count + 1 WHERE date = #{date}
    </update>

    <update id="incrementTotalCount">
        UPDATE visitor_count SET total_count = total_count + 1
    </update>

    <insert id="insertNewRecord">
        INSERT INTO visitor_count (date, count, total_count) VALUES (#{date}, 1, #{totalCount})
    </insert>

    <select id="getTotalCount" resultType="int">
        SELECT SUM(total_count) FROM visitor_count
    </select>

    <select id="getTodayCount" resultType="int">
        SELECT count FROM visitor_count WHERE date = #{date}
    </select>
</mapper>
