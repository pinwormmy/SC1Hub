<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sc1hub.assistant.mapper.AssistantSearchLogMapper">

    <insert id="insertLog">
        INSERT INTO assistant_search_log (message, created_at)
        VALUES (#{message}, NOW())
    </insert>

    <delete id="deleteOlderThan">
        DELETE FROM assistant_search_log
        WHERE created_at &lt; #{cutoff}
    </delete>

    <select id="selectLatest" resultType="com.sc1hub.assistant.dto.AssistantSearchLogDTO">
        SELECT id, message, created_at
        FROM assistant_search_log
        ORDER BY created_at DESC, id DESC
        LIMIT #{limit}
    </select>
</mapper>
