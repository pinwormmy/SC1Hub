<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt"%>
<%@ taglib uri='http://java.sun.com/jsp/jstl/core' prefix='c'%>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="/plugins/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/style.css">

<style>
.this-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
    max-width: 1200px;
    width: 80%;
    margin: 10px auto;
    padding: 8px;
    border-top: solid 1px white;
    border-bottom: solid 1px white;
}
.super-top-menu {
    display: flex;
    justify-content: flex-end;
    flex-grow: 1; /* 가능한 모든 공간 차지 */
}
.super-top-menu ul {
    display: flex;
    justify-content: flex-end;
    flex-wrap: nowrap;
    list-style: none;
    margin: 0;
    padding: 0;
}
.super-top-menu ul li {
    margin-right: 20px;
}

/* 데스크톱 화면에서는 기본 타이틀 텍스트 사용 */
.title-container .full-title {
    display: inline;
}

.title-container .short-title {
    display: none;
}

/* 모바일 화면에서 헤더 레이아웃 조정 */
@media (max-width: 768px) {
    .this-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .title-container {
        font-size: 32px; /* 폰트 크기 조정 */
        position: static; /* 절대 위치 제거 */
        transform: none; /* 변환 제거 */
        margin-bottom: 10px; /* 타이틀 아래 마진 추가 */
        text-align: left; /* 좌측 정렬 */
    }

    .title-container .full-title {
        display: none;
    }

    .title-container .short-title {
        display: block; /* 블록 레벨 요소로 변경 */
    }

    .super-top-menu ul {
        justify-content: flex-end;
    }

     .super-top-menu ul li {
        margin-right: 10px;
    }
}

</style>
</head>

<body>
<div class="navbar-wrapper">
    <div class="this-header">
        <div style="flex-grow: 1;"></div>
        <div class="title-container">
            <span class="full-title">SC1Hub - 스타크래프트1 전문 커뮤니티</span>
            <span class="short-title">SC1Hub</span>
        </div>
        <div class="super-top-menu">
            <ul>
                <c:if test="${member == null}">
                    <li><a href="/login">로그인</a></li>
                    <li><a href="/signAgreement">회원가입</a></li>
                </c:if>
                <c:if test="${member != null}">
                    <li>${member.id}님 로그인 중 : </li>
                    <li><a href="/logout">로그아웃</a></li>
                    <li><a href="javascript:goMyPage()">회원정보</a></li>
                </c:if>
            </ul>
        </div>
    </div>
</div>

</body>

<script>

    function goMyPage() {
        if(${member == null}) {
            alert("로그인이 필요합니다.");
            return false;
        }
        location.href="/myPage?id=${member.id}";
    }

</script>

</html>
