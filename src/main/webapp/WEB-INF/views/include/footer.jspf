            '23': '/tVsZBoard/readPost?postNum=2',
            '24': '/tVsZBoard/readPost?postNum=3',
            '25': '/tVsZBoard/readPost?postNum=4',
            '26': '/tVsZBoard/readPost?postNum=5',
