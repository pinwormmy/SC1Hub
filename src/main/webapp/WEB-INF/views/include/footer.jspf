            '0': '/guidelines',
            '1': '/',
            '2': '/supportBoard/list',
            '3': '/videoLinkBoard/list',
            '4': '/promotionBoard/list',
            '5': '/freeBoard/list',
            '6': '/beginnerBoard/list',
            '7': '/funBoard/list',
            '8': '/terranBoard/list',
            '9': '/tVsZBoard/list',
            '10': '/tVsPBoard/list',
            '11': '/tVsTBoard/list',
            '12': '/zergBoard/list',
            '13': '/zVsTBoard/list',
            '14': '/zVsPBoard/list',
            '15': '/zVsZBoard/list',
            '16': '/protossBoard/list',
            '17': '/pVsTBoard/list',
            '18': '/pVsZBoard/list',
            '19': '/pVsPBoard/list',
            '20': '/teamPlayBoard/list',
            '21': '/teamPlayGuideBoard/list',
